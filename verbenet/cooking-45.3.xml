     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V NP PP.instrument"/>
               <EXAMPLES>
                    <EXAMPLE>Luc a cuit les pommes de terre au four</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Patient">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="avec;dans;à"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Instrument">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>cause(Agent, E) apply_heat(during(E), Instrument, Patient) cooked(result(E), Form, Patient) use(during(E), Agent, Instrument)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP se V ADV"/>
               <EXAMPLES>
                    <EXAMPLE>Les pommes de terre bretonnes se cuisent facilement</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Patient">
                         <SYNRESTRS/>
                    </NP>
                    <VERB pronominal="true" restr="middle"/>
                    <ADV/>
               </SYNTAX>
               <SEMANTICS>property(Patient, Prop) Adv(Prop)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP.instrument V NP"/>
               <EXAMPLES>
                    <EXAMPLE>Ce four a cuit les pommes de terre</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Instrument">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Patient">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>apply_heat(during(E), Instrument, Patient) cooked(result(E), Form, Patient)</SEMANTICS>
          </FRAME>
     </FRAMES>
