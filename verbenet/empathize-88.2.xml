<?xml version="1.0" encoding="UTF-8"?>
<VNCLASS ID="empathize-88.2" ladl=" 7" lvf="U2b">
     <MEMBERS>
          <MEMBER name="compatir"/>
     </MEMBERS>
     <THEMROLES>
          <THEMROLE type="Experiencer">
               <SELRESTRS logic="or">
                    <SELRESTR Value="+" type="organization"/>
                    <SELRESTR Value="+" type="animate"/>
               </SELRESTRS>
          </THEMROLE>
          <THEMROLE type="Stimulus"/>
     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V PP.stimulus" syntax="Experiencer V {à} Stimulus"/>
               <EXAMPLES>
                    <EXAMPLE>Luc compatit aux malheurs de Marie</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Experiencer">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="à"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Stimulus">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>emotional_state(E, Experiencer) in_reaction_to(E, Stimulus)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V à ce Qu Psubj" syntax="Experiencer V {à} Stimulus&lt;+Qu Psubj&gt;"/>
               <EXAMPLES>
                    <EXAMPLE>Luc compatit à ce que Marie soit au chômage</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Experiencer">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="à"/>
                         </SELRESTRS>
                    </PREP>
                    <PSUBJ introduced_by="à" value="Stimulus"/>
               </SYNTAX>
               <SEMANTICS>emotional_state(E, Experiencer) in_reaction_to(E, Stimulus)</SEMANTICS>
          </FRAME>
     </FRAMES>
</VNCLASS>
