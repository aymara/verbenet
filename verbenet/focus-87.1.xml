<?xml version="1.0" encoding="UTF-8"?>
<VNCLASS ID="focus-87.1" ladl="11" lvf="P1e ou P1f">
     <MEMBERS>
          <MEMBER name="concentrer se"/>
          <MEMBER name="focaliser se"/>
          <MEMBER name="gamberger"/>
     </MEMBERS>
     <THEMROLES>
          <THEMROLE type="Experiencer">
               <SELRESTRS logic="or">
                    <SELRESTR Value="+" type="organization"/>
                    <SELRESTR Value="+" type="animate"/>
               </SELRESTRS>
          </THEMROLE>
          <THEMROLE type="Theme"/>
     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V PP.theme" syntax="Experiencer V {sur} Theme"/>
               <EXAMPLES>
                    <EXAMPLE>Luc s'est concentré sur l'affaire.</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Experiencer">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="sur"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Theme">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>concentrate(during(E), Experiencer, Theme) cause(E, Theme)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V PP.theme" syntax="Experiencer V {à/pour} Theme&lt;+VExperiencer-inf&gt;"/>
               <EXAMPLES>
                    <EXAMPLE>Luc s'est concentré à/pour résoudre le problème</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Experiencer">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="à;pour"/>
                         </SELRESTRS>
                    </PREP>
                    <NP modifier="+VExperiencer-inf" value="Theme">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>concentrate(during(E), Experiencer, Theme) cause(E, Theme)</SEMANTICS>
          </FRAME>
     </FRAMES>
</VNCLASS>
