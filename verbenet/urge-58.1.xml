                    <EXAMPLE>Luc a poussé Marie à ce que son mari démissionne</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Recipient">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="à"/>
                         </SELRESTRS>
                    </PREP>
                    <PSUBJ introduced_by="à" value="Topic"/>
               </SYNTAX>
               <SEMANTICS>urge(during(E), Agent, Recipient, Topic)</SEMANTICS>
          </FRAME>
     </FRAMES>
</VNCLASS>
