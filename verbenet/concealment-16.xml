<?xml version="1.0" encoding="UTF-8"?>
<VNCLASS ID="concealment-16" ladl="38LD ou 38LR" lvf="L3b ou L1b">
     <MEMBERS>
          <MEMBER name="retenir"/>
          <MEMBER name="verrouiller"/>
          <MEMBER name="bloquer"/>
          <MEMBER name="séquestrer"/>
          <MEMBER name="recueillir"/>
     </MEMBERS>
     <THEMROLES>
          <THEMROLE type="Agent">
               <SELRESTR Value="+" type="animate"/>
          </THEMROLE>
          <THEMROLE type="Patient"/>
          <THEMROLE type="Location">
               <SELRESTRS logic="and">
                    <SELRESTR Value="-" type="region"/>
                    <SELRESTR Value="+" type="location"/>
               </SELRESTRS>
          </THEMROLE>
     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V NP PP.location"/>
               <EXAMPLES>
                    <EXAMPLE>Luc a caché les cadeaux dans le placard</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Patient">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="+" type="loc"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Location">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>cause(Agent, E) visible(start(E), Patient) not(visible(end(E), Patient)) location(result(E), Patient, Location)</SEMANTICS>
          </FRAME>
     </FRAMES>
     <SUBCLASSES>
          <VNSUBCLASS ID="16-1">
               <MEMBERS>
                    <MEMBER name="camoufler"/>
                    <MEMBER name="dissimuler"/>
                    <MEMBER name="ensevelir"/>
                    <MEMBER name="cloîtrer"/>
                    <MEMBER name="planquer"/>
                    <MEMBER name="abriter"/>
                    <MEMBER name="enfermer"/>
                    <MEMBER name="murer"/>
                    <MEMBER name="cacher"/>
               </MEMBERS>
               <THEMROLES/>
               <FRAMES>
                    <FRAME>
                         <DESCRIPTION primary="NP se V PP.location"/>
                         <EXAMPLES>
                              <EXAMPLE>Luc s'est caché dans le placard</EXAMPLE>
                         </EXAMPLES>
                         <SYNTAX>
                              <NP value="Agent">
                                   <SYNRESTRS/>
                              </NP>
                              <VERB pronominal="true" restr="reflexive"/>
                              <PREP>
                                   <SELRESTRS>
                                        <SELRESTR Value="+" type="loc"/>
                                   </SELRESTRS>
                              </PREP>
                              <NP value="Location">
                                   <SYNRESTRS/>
                              </NP>
                         </SYNTAX>
                         <SEMANTICS>visible(start(E), Agent) not(visible(end(E), Agent)) location(during(E), Agent, Location)</SEMANTICS>
                    </FRAME>
               </FRAMES>
          </VNSUBCLASS>
     </SUBCLASSES>
</VNCLASS>
