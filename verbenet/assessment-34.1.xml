<?xml version="1.0" encoding="UTF-8"?>
<VNCLASS ID="assessment-34.1" ladl="6[-N1 =: Qu Pind et -N1 =: Qu Psubj]" lvf="H3f ou P3b">
     <MEMBERS>
          <MEMBER name="apprécier"/>
          <MEMBER name="étudier"/>
          <MEMBER name="expertiser"/>
          <MEMBER name="explorer"/>
          <MEMBER name="inspecter"/>
          <MEMBER name="peser"/>
          <MEMBER name="examiner"/>
          <MEMBER name="auditer"/>
          <MEMBER name="chiffrer"/>
          <MEMBER name="mesurer"/>
          <MEMBER name="méjuger"/>
     </MEMBERS>
     <THEMROLES>
          <THEMROLE type="Agent">
               <SELRESTR Value="+" type="animate"/>
          </THEMROLE>
          <THEMROLE type="Theme"/>
          <THEMROLE type="Attribute"/>
     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V NP PP.attribute"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué les planchers pour leur solidité</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Theme">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="pour"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Attribute">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, Attribute)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V NP.attribute"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué la résistance du bâtiment.</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP modifier="+genitive(Theme)" value="Attribute">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, Attribute)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V si P"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué si le bâtiment allait s'écrouler</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <P introduced_by="si" value="Theme"/>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, ?Attribute)</SEMANTICS>
          </FRAME>
     </FRAMES>
</VNCLASS>
