<?xml version="1.0" encoding="UTF-8"?>
<VNCLASS ID="assessment-34.1">
     <MEMBERS>
          <MEMBER name="scruter"/>
          <MEMBER name="apprécier"/>
          <MEMBER name="étudier"/>
          <MEMBER name="évaluer"/>
          <MEMBER name="expertiser"/>
          <MEMBER name="explorer"/>
          <MEMBER name="inspecter"/>
          <MEMBER name="peser"/>
     </MEMBERS>
     <THEMROLES>
          <THEMROLE type="Agent">
               <SELRESTR Value="+" type="animate"/>
          </THEMROLE>
          <THEMROLE type="Theme"/>
          <THEMROLE type="Attribute"/>
     </THEMROLES>
     <FRAMES>
          <FRAME>
               <DESCRIPTION primary="NP V NP"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué le bâtiment.</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Theme">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, ?Attribute)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V NP PP.attribute"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué les planchers pour leur solidité</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Theme">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="pour"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Attribute">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, Attribute)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V NP.attribute PP"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué la résistance du bâtiment.</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>
                    <NP value="Agent">
                         <SYNRESTRS/>
                    </NP>
                    <VERB/>
                    <NP value="Attribute">
                         <SYNRESTRS/>
                    </NP>
                    <PREP>
                         <SELRESTRS>
                              <SELRESTR Value="de"/>
                         </SELRESTRS>
                    </PREP>
                    <NP value="Theme">
                         <SYNRESTRS/>
                    </NP>
               </SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, Attribute)</SEMANTICS>
          </FRAME>
          <FRAME>
               <DESCRIPTION primary="NP V si P ou si P"/>
               <EXAMPLES>
                    <EXAMPLE>L'inspecteur a évalué si le bâtiment allait s'écrouler</EXAMPLE>
               </EXAMPLES>
               <SYNTAX>Agent V Theme &lt;+si P ou si P&gt;</SYNTAX>
               <SEMANTICS>assess(during(E), Agent, Theme, ?Attribute)</SEMANTICS>
          </FRAME>
     </FRAMES>
</VNCLASS>
